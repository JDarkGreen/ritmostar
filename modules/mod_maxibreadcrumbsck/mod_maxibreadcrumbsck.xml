<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="2.5"
	client="site"
	method="upgrade">
	<name>Maxi Breadcrumbs CK</name>
	<author>Cédric KEIFLIN</author>
	<creationDate>Février 2012</creationDate>
	<copyright>Cédric KEIFLIN</copyright>
	<license>GNU/GPL 3 http://www.gnu.org/licenses/gpl.html</license>
	<authorEmail>ced1870@gmail.com</authorEmail>
	<authorUrl>http://www.joomlack.fr</authorUrl>
	<version>2.0.2</version>
	<description>MOD_BREADCRUMBSCK_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_maxibreadcrumbsck">mod_maxibreadcrumbsck.php</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_maxibreadcrumbsck.xml</filename>
	</files>
        <languages folder="language">
            <language tag="en-GB">en-GB/en-GB.mod_maxibreadcrumbsck.ini</language>
            <language tag="en-GB">en-GB/en-GB.mod_maxibreadcrumbsck.sys.ini</language>
            <language tag="fr-FR">fr-FR/fr-FR.mod_maxibreadcrumbsck.ini</language>
            <language tag="fr-FR">fr-FR/fr-FR.mod_maxibreadcrumbsck.sys.ini</language>
        </languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_BREADCRUMBS" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="showHere"
					type="radio"
					default="1"
					label="MOD_BREADCRUMBSCK_FIELD_SHOWHERE_LABEL"
					description="MOD_BREADCRUMBSCK_FIELD_SHOWHERE_DESC">
					<option
						value="0">JNO</option>
					<option
						value="1">JYES</option>
				</field>
				<field
					name="showHome"
					type="radio"
					default="1"
					label="MOD_BREADCRUMBSCK_FIELD_SHOWHOME_LABEL"
					description="MOD_BREADCRUMBSCK_FIELD_SHOWHOME_DESC">
					<option
						value="0">JNO</option>
					<option
						value="1">JYES</option>
				</field>
				<field
					name="showDesc"
					type="radio"
					default="1"
					label="MOD_BREADCRUMBSCK_FIELD_SHOWDESC_LABEL"
					description="MOD_BREADCRUMBSCK_FIELD_SHOWDESC_DESC">
					<option
						value="0">JNO</option>
					<option
						value="1">JYES</option>
				</field>
				<field
					name="homeText"
					type="text"
					default="Home"
					label="MOD_BREADCRUMBSCK_FIELD_HOMETEXT_LABEL"
					description="MOD_BREADCRUMBSCK_FIELD_HOMETEXT_DESC" />
				<field
					name="showLast"
					type="radio"
					default="1"
					label="MOD_BREADCRUMBSCK_FIELD_SHOWLAST_LABEL"
					description="MOD_BREADCRUMBSCK_FIELD_SHOWLAST_DESC">
					<option
						value="0">JNO</option>
					<option
						value="1">JYES</option>
				</field>
				<field
					name="separator"
					type="text"
					label="MOD_BREADCRUMBSCK_FIELD_SEPARATOR_LABEL"
					description="MOD_BREADCRUMBSCK_FIELD_SEPARATOR_DESC" />
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="itemid">
					<option
						value="itemid"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
